generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]

}
datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}
enum Role {
  USER
  ADMIN
  HOSTER
  DRIVER
  MECHANIC
  CUSTOMER
  MANAGER

}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      Role     
  is_active Boolean  @default(true)
}